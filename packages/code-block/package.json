{
  "name": "@solidjs-email/code-block",
  "version": "1.0.0",
  "description": "Code block component with syntax highlighting for SolidJS email templates",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts",
    "build:watch": "tsdown src/index.ts --format esm,cjs --dts --watch",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "keywords": [
    "solidjs",
    "email",
    "code-block",
    "syntax-highlighting"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0"
  },
  "dependencies": {
    "prismjs": "^1.30.0"
  },
  "devDependencies": {
    "@solidjs-email/render": "workspace:*",
    "@types/prismjs": "1.26.5",
    "solid-js": "^1.9.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.0"
  },
  "author": "solidjs-email",
  "repository": {
    "type": "git",
    "url": "https://github.com/solidjs-email/solidjs-email.git",
    "directory": "packages/code-block"
  },
  "publishConfig": {
    "access": "public"
  }
}
