{
  "name": "@solidjs-email/main",
  "version": "1.0.2",
  "description": "Build and send emails using SolidJS components",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components.d.ts",
        "default": "./dist/components.js"
      },
      "require": {
        "types": "./dist/components.d.cts",
        "default": "./dist/components.cjs"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsdown src/index.ts src/components.ts",
    "build:watch": "tsdown src/index.ts src/components.ts --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "solidjs",
    "email",
    "components",
    "render",
    "templates"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0"
  },
  "dependencies": {
    "@solidjs-email/body": "workspace:*",
    "@solidjs-email/button": "workspace:*",
    "@solidjs-email/code-block": "workspace:*",
    "@solidjs-email/code-inline": "workspace:*",
    "@solidjs-email/column": "workspace:*",
    "@solidjs-email/container": "workspace:*",
    "@solidjs-email/font": "workspace:*",
    "@solidjs-email/head": "workspace:*",
    "@solidjs-email/heading": "workspace:*",
    "@solidjs-email/hr": "workspace:*",
    "@solidjs-email/html": "workspace:*",
    "@solidjs-email/img": "workspace:*",
    "@solidjs-email/link": "workspace:*",
    "@solidjs-email/markdown": "workspace:*",
    "@solidjs-email/preview": "workspace:*",
    "@solidjs-email/render": "workspace:*",
    "@solidjs-email/row": "workspace:*",
    "@solidjs-email/section": "workspace:*",
    "@solidjs-email/tailwind": "workspace:*",
    "@solidjs-email/text": "workspace:*"
  },
  "devDependencies": {
    "solid-js": "^1.9.0",
    "typescript": "^5.8.0"
  },
  "author": "solidjs-email",
  "repository": {
    "type": "git",
    "url": "https://github.com/solidjs-email/solidjs-email.git",
    "directory": "packages/solidjs-email"
  },
  "homepage": "https://github.com/solidjs-email/solidjs-email",
  "publishConfig": {
    "access": "public"
  }
}
