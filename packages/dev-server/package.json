{
  "name": "@solidjs-email/dev-server",
  "version": "1.0.2",
  "description": "Development server for previewing SolidJS email templates",
  "type": "module",
  "bin": {
    "solidjs-email": "./dist/cli.js"
  },
  "files": [
    "dist/**",
    "src/**",
    "app.config.ts"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsdown src/cli.ts src/index.ts --format esm",
    "build:watch": "tsdown src/cli.ts src/index.ts --format esm --watch",
    "dev": "EMAILS_DIR=../../examples/default/emails vinxi dev --port 6008"
  },
  "keywords": [
    "solidjs",
    "email",
    "preview",
    "dev-server"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@solidjs-email/components": "workspace:*",
    "@solidjs-email/render": "workspace:*",
    "@solidjs/router": "^0.15.4",
    "@solidjs/start": "^1.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "cac": "^6.7.14",
    "picocolors": "^1.1.0",
    "solid-js": "^1.9.0",
    "tailwindcss": "^4.1.18",
    "vinxi": "^0.5.11"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.8.0",
    "vite": "^6.4.1"
  },
  "author": "solidjs-email",
  "repository": {
    "type": "git",
    "url": "https://github.com/solidjs-email/solidjs-email.git",
    "directory": "packages/dev-server"
  },
  "publishConfig": {
    "access": "public"
  }
}
