{
  "name": "@monkedevlife/solidjs-email-components",
  "version": "0.0.1",
  "description": "All SolidJS email components in one package",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts",
    "build:watch": "tsdown src/index.ts --format esm,cjs --dts --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "solidjs",
    "email"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0"
  },
  "dependencies": {
    "@monkedevlife/solidjs-email-body": "workspace:*",
    "@monkedevlife/solidjs-email-button": "workspace:*",
    "@monkedevlife/solidjs-email-code-block": "workspace:*",
    "@monkedevlife/solidjs-email-code-inline": "workspace:*",
    "@monkedevlife/solidjs-email-column": "workspace:*",
    "@monkedevlife/solidjs-email-container": "workspace:*",
    "@monkedevlife/solidjs-email-font": "workspace:*",
    "@monkedevlife/solidjs-email-head": "workspace:*",
    "@monkedevlife/solidjs-email-heading": "workspace:*",
    "@monkedevlife/solidjs-email-hr": "workspace:*",
    "@monkedevlife/solidjs-email-html": "workspace:*",
    "@monkedevlife/solidjs-email-img": "workspace:*",
    "@monkedevlife/solidjs-email-link": "workspace:*",
    "@monkedevlife/solidjs-email-markdown": "workspace:*",
    "@monkedevlife/solidjs-email-preview": "workspace:*",
    "@monkedevlife/solidjs-email-render": "workspace:*",
    "@monkedevlife/solidjs-email-row": "workspace:*",
    "@monkedevlife/solidjs-email-section": "workspace:*",
    "@monkedevlife/solidjs-email-tailwind": "workspace:*",
    "@monkedevlife/solidjs-email-text": "workspace:*"
  },
  "devDependencies": {
    "solid-js": "^1.9.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.0"
  },
  "author": "monkedevlife",
  "repository": {
    "type": "git",
    "url": "https://github.com/monkedevlife/solidjs-email.git",
    "directory": "packages/components"
  },
  "publishConfig": {
    "access": "public"
  }
}
