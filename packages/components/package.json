{
  "name": "@solidjs-email/components",
  "version": "0.0.1",
  "description": "All SolidJS email components in one package",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist/**"],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts",
    "build:watch": "tsdown src/index.ts --format esm,cjs --dts --watch",
    "clean": "rm -rf dist"
  },
  "keywords": ["solidjs", "email"],
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0"
  },
  "dependencies": {
    "@solidjs-email/body": "workspace:*",
    "@solidjs-email/button": "workspace:*",
    "@solidjs-email/column": "workspace:*",
    "@solidjs-email/container": "workspace:*",
    "@solidjs-email/font": "workspace:*",
    "@solidjs-email/head": "workspace:*",
    "@solidjs-email/heading": "workspace:*",
    "@solidjs-email/hr": "workspace:*",
    "@solidjs-email/html": "workspace:*",
    "@solidjs-email/img": "workspace:*",
    "@solidjs-email/link": "workspace:*",
    "@solidjs-email/markdown": "workspace:*",
    "@solidjs-email/preview": "workspace:*",
    "@solidjs-email/render": "workspace:*",
    "@solidjs-email/row": "workspace:*",
    "@solidjs-email/section": "workspace:*",
    "@solidjs-email/tailwind": "workspace:*",
    "@solidjs-email/text": "workspace:*"
  },
  "devDependencies": {
    "solid-js": "^1.9.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.0"
  }
}
